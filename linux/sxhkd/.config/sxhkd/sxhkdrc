# show keybindings
super + F1
  $TERMINAL -e keybindings

# swap current node and biggest local node
super + shift + b
    bspc node -s biggest.window

# close window
super + shift + c
  bspc node -c

# toggle window flags; "private" avoids splitting
super + shift + f
  bspc node -t {marked,locked,sticky,private}

# kill window/app
super + shift + x
  bspc node -k

# toggle window state
super + shift + s
  bspc node -t {tiled,floating,fullscreen}
  #bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# alternate between tiled and monocle layout (zoom)
super + shift + z
	bspc desktop -l next

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} ^{1-9,10}

# cycle windows
alt + {_,shift + }Tab
  bspc node -f {next,prev}

# Focus windows by direction, works with multihead
super + {h,j,k,l}
  focusmover {west,south,north,east}

# Move tiled windows. Moving a tiled window to
# preselected one moves into preselection instead.
# Moving out of the screen should move the window to next monitor if possible
super + shift + {h,j,k,l}
  windowgrabber {west,south,north,east}

# resize window
super + ctrl + {h,j,k,l}
  n=10; \
  { d1=left;   d2=right;  dx=-$n; dy=0;   \
  , d1=bottom; d2=top;    dx=0;   dy=$n;  \
  , d1=top;    d2=bottom; dx=0;   dy=-$n; \
  , d1=right;  d2=left;   dx=$n;  dy=0;   \
  } \
  bspc node --resize $d1 $dx $dy || bspc node --resize $d2 $dx $dy

# move floating window
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# balance tree
# super + shift + b
#   bspc node @/ -B
# balancing all windows with except the biggest
# super + alt + b
#   bspc node @brother -B
# Undo balancing (equalize windows)
# super + ctrl + b
#   bspc node @/ -E

# mirror and flip leaves of tree
super + {comma,period}
  bspc node @/ -F {horizontal,vertical}

# rotate leaves of tree
super + shift + {comma,period}
  bspc node @/ -R {90,270}

# application launcher
super + space
  dmenu_run

super + Return
  $TERMINAL

super + b
  $BROWSER

super + i
  eval $PRIVATE_BROWSER

super + p
  eval $BROWSER --user-data-dir="${XDG_CONFIG_HOME}/chromium-proxy-profile" --proxy-server="socks5://localhost:9090"

super + f
  $TERMINAL -e lf

super + g
  flameshot gui

super + v
  peek

super + m
  $TERMINAL -e $MIXER

super + s
  spotify

super + x
  slack

super + z
  zoom

# media keys
# XF86AudioRaiseVolume
#   pulseaudio-ctl up
# XF86AudioLowerVolume
#   pulseaudio-ctl down
# XF86AudioMute
#   pulseaudio-ctl mute
XF86AudioRaiseVolume
  vol up
XF86AudioLowerVolume
  vol down
XF86AudioMute
  vol mute
XF86AudioNext
  playerctl -p spotify -s next
XF86AudioPrev
  playerctl -p spotify -s previous
XF86AudioPause
  playerctl -p spotify -s play-pause
XF86AudioPlay
  playerctl -p spotify -s play-pause
XF86AudioStop
  playerctl -p spotify -s stop

# toggle compositing
super + alt + c
    { pkill picom, picom -b }

# show dunst history
super + d
  dunstctl history-pop

# cycle dunst
super + alt + d
  {pkill dunst, dunst }

# close all dunst messages
super + ctrl + d
  dunstctl close-all

# pause/unpause dunst messages
super + ctrl + p
  dunstctl set-paused toggle

# restart polybar
super + alt + p
  polybar-msg cmd restart

# reload sxhkd config
super + alt + s
  pkill -USR1 -x sxhkd

# edit this file
ctrl + alt + space
  $TERMINAL -e $EDITOR ${XDG_CONFIG_HOME}/sxhkd/sxhkdrc

# screensaver - activates xsecurelock
super + Escape
    xset s activate

# reload bspwm config
super + alt + r
    bspc wm -r

# quit bspwm
super + alt + q
    bspc quit

super + shift + BackSpace
    prompt "Poweroff?" poweroff

ctrl + alt + Delete
    prompt "Reboot?" reboot
